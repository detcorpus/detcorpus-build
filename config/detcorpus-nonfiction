    ATTRIBUTE genre {
        MULTIVALUE yes
        MULTISEP ":"
    }
    ATTRIBUTE id
    ATTRIBUTE year {
        NUMERIC yes
	DIACHRONIC yes
    }
    ATTRIBUTE edition_year {
        NUMERIC yes
	DIACHRONIC yes
    }
    ATTRIBUTE author {
        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE author_sex {
        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE author_birth_year {
        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE author_death_year {
        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE realname
    ATTRIBUTE title
    ATTRIBUTE booktitle
    ATTRIBUTE sourcetitle
    ATTRIBUTE colophon
    ATTRIBUTE firstprint_description
    ATTRIBUTE edition
    ATTRIBUTE city
    ATTRIBUTE publisher
    ATTRIBUTE wordcount
}
DIACHRONIC doc.year
DIACHRONIC doc.edition_year
DIACHRONIC doc.author_birth_year
DIACHRONIC doc.author_death_year
