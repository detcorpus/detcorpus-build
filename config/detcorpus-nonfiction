    ATTRIBUTE id
    ATTRIBUTE lda100 {
        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE lda200 {
        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE lda300 {
        MULTIVALUE yes
        MULTISEP "|"
    }
}
STRUCTURE s 
